extends ../main

block content
    .container
        .row
            .col-md-10.col-md-offset-1
                .col-md-6.col-md-offset-3
                    .form-group.has-error
                        .panel.panel-danger.panel-credentials
                            .panel-body.form-panel
                                form(action="/login" method="post")
                                    .form-group
                                    input#username-login.form-control(type='text' name='username' placeholder='Username' autofocus)
                                    .form-group
                                    input#password-login.form-control(type='password' name='password' placeholder='Password')
                                    .form-group.text-center
                                        button#btn-login.btn.btn-danger(type='submit' onclick='return false') Log In
