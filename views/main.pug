<!DOCTYPE html>
html(lang="en")
head
    meta(charset="UTF-8")
    title PrintThePapers
    link(rel="stylesheet", href="/libs/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/public/css/main.css")
    link(rel="stylesheet", href="/libs/toastr/build/toastr.min.css")

    script(src="/libs/jquery/dist/jquery.js")
    script(src="/libs/bootstrap/dist/js/bootstrap.js")
    script(src="/libs/toastr/build/toastr.min.js")
body
nav.navbar.navbar-inverse.navbar-fixed-top.top-nav-color
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse')
                span.sr-only
                span.icon-bar
                span.icon-bar
                span.icon-bar
        .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-left
                li
                    img(src='/public/images/logo.png')

            ul.nav.navbar-nav.navbar-right
                if user && user.role == 'admin'
                    li
                        a(href='/admin-panel') ADMIN PANEL
                            img.nav-img.nav-height(src='/public/images/admin.png')
                if !user
                    li
                        a(href='/login') LOGIN
                            img.nav-img.nav-height(src='/public/images/login.png')
                    li
                        a(href='/register') REGISTER
                            img.nav-img.nav-height(src='/public/images/register.png')
                else
                    li
                        a(href='/profile/' + user.username) PROFILE
                            img.nav-img.nav-height(src='/public/images/profile.png')
                    li
                        a(href='/logout') LOGOUT
                            img.nav-img.nav-height(src='/public/images/logout.png')
nav.navbar.navbar-inverse.nav-color
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse')
                span.sr-only
                span.icon-bar
                span.icon-bar
                span.icon-bar
        .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-left
                li
                    a(href='/home') HOME
                li
                    a(href='/products') PRODUCTS
                li.nav-search
                    ul.nav.navbar-nav.navbar-right
                        li
                            form.navbar-form.navbar-right(action='/search', method='post')
                                .form-group
                                    input#search-bar.form-control.search(type='text', name='query' placeholder='Search products...', onfocus='this.placeholder = ""' onblur='this.placeholder ="Search products..."')
                                    input.search-img(type='image', name='submit', src='/public/images/search.png')
                                    //button#btn-search.btn.btn-xs.btn-danger(type="submit") Search!


#main-container
    block content

